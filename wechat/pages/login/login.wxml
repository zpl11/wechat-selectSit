<!--pages/index/index.wxml-->
<view class="page__bd">
        <mp-form id="form" rules="{{rules}}" models="{{formData}}">
            <mp-cells footer="每人按照自己的学号进行绑定">
                <mp-cell prop="qq" title="学号" ext-class="">
                    <input bindinput="formInputStudentNumber" data-field="qq" class="weui-input" placeholder="请输入学号"/>
                </mp-cell>

                <mp-cell prop="password" title="密码" ext-class="">
                    <input bindinput="formInputPassword" data-field="qq" class="weui-input" placeholder="请输入密码"/>
                </mp-cell>
            </mp-cells>
        </mp-form>
        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="submitForm">登录</button>
            <button class="weui-btn" type="primary" bindtap="registerForm">注册</button>
        </view>
</view>

